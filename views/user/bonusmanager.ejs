<section class="content-wrapper">
        <div class="row">
            <div class="twelve column">
                <p class="lead">Bonus Manager</p>
                <div id="contact-form-area">
                     <% if(flash && flash.err) { %>
                      <ul class="alert alert-success" type="none">
                        <% Object.keys(flash.err).forEach(function(error) { %>
                          <li><%= JSON.stringify(flash.err[error]) %></li>
                        <% }) %>
                        </ul>
                    <% } %>
                    <!-- Contact Form Start //-->
                    <form action="/user/gethelpmanager" id="contactform"> 
                        <fieldset> 
                        <label>Bonus Confirmed</label>                           
                        <input type="text" name="bonusconf" class="textfield" id="bonusconf" value="Rp. <%=user.manager%>" readonly="true" />
                        <label>Nominal GH <em>*</em></label>
                        <% if(usrObj.state) { %>                           
                                <input type="text" name="nominalgh" class="textfield" id="nominalgh" />
                        <% } else { %>
                                <input type="text" class="textfield" value="Maaf Anda belum bisa mengambil Bonus Manager...." readonly="true"/>  
                        <% } %>
                        <div class="clear"></div> 
                        <label>&nbsp;</label>
                        <% if (usrObj.state) { %>
                                <button type="submit" name="submit" class="buttoncontact" id="buttonsend">Submit</button>
                        <% } %>
                        <span class="loading" style="display: none;">Please wait..</span>
                        <div class="clear"></div>
                        </fieldset> 
                    </form>
                    <!-- Contact Form End //-->
                </div>  
            </div>     
        </div>              
    </section>